<%- include('./includes/head') %>
    <%- include('./includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                </div>
                <div class="col-lg-8 my-5">
                    <h1 class="display-1 text-center">Agenda</h1>
                    <p class="text-center lead">Seus contatos abaixo</p>
                    
                    <%- include('./includes/messeges') %>

                    <% if(contatos.length > 0 ) { %>

                    <div class="responsive-table">
                        <table class="table my-3">

                            <% contatos.forEach(contato => { %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.telefone %></td>
                                <td><%= contato.email %></td>
                                <td><a href="/contato/index/<%= contato.id %>">Editar</a></td>
                                <td><a class="text-danger" href="/contato/delete/<%= contato.id %>">Excluir</a></td>
                            </tr>   
                            <% }) %>
                            
                        <% } else { %>
                            <p class="text-center lead">NÃ£o existe contato na sua agenda
                         <% }  %>
                        </table>
                    </div>
                </div>
                <div class="col-lg-2">


                </div>
            </div>


        </div>
        <%- include('./includes/footer') %>